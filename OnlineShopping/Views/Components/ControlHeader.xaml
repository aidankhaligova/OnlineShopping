<UserControl x:Class="OnlineShopping.Views.Components.ControlHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnlineShopping.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <Grid>
        <Border Background="DarkGray" BorderThickness="3" Margin="0 15 0 0" Height="50">
            <TextBlock Height="50" FontSize="20" Background="Gray" Margin="2 2 2 2"  TextAlignment="Center" FontWeight="Medium" Text="{Binding Header}"/>
        </Border>
    </Grid>
</UserControl>
